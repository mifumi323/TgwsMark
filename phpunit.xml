<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" colors="true" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.1/phpunit.xsd" cacheDirectory=".phpunit.cache">
  <coverage>
    <report>
      <html outputDirectory="./coverage" lowUpperBound="50" highLowerBound="80"/>
      <cobertura outputFile="./coverage/cobertura.xml"/>
    </report>
  </coverage>
  <testsuites>
    <testsuite name="Common">
      <directory>./tests</directory>
    </testsuite>
  </testsuites>
  <logging/>
  <php>
    <env name="TEST_ENV" value="true"/>
  </php>
  <source>
    <include>
      <directory suffix=".php">./src</directory>
    </include>
  </source>
</phpunit>
